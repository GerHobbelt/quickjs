{
  "name": "quickjs-emscripten-repo",
  "private": true,
  "version": "0.25.0-0",
  "sideEffects": false,
  "license": "MIT",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/justjake/quickjs-emscripten"
  },
  "files": [
    "README.md",
    "LICENSE",
    "variants.json"
  ],
  "scripts": {
    "prepack": "yarn build",
    "tarball": "rm -rf $PWD/build/tar && mkdir -p $PWD/build/tar && yarn for-each-package-cmd pack --out $PWD/build/tar/%s.tgz",
    "prepare": "yarn prettier-check && yarn tarball && yarn test && yarn test-dist && yarn smoketest-node",
    "clean": "git clean -dfx ./build && yarn for-each-package clean",
    "prettier": "prettier --write .",
    "update-quickjs": "git subtree pull --prefix=quickjs --squash git@github.com:bellard/quickjs.git master",
    "smoketest-node": "yarn tarball && ./scripts/smoketest-node.ts",
    "smoketest-cra": "yarn tarball && ./scripts/smoketest-website.ts",
    "check": "yarn check:format && yarn build && yarn check:types && yarn test",
    "test": "yarn for-each-package test",
    "test:fast": "TEST_NO_ASYNC=true yarn test",
    "test:slow": "TEST_LEAK=1 yarn test",
    "check:types": "yarn for-each-package tsc",
    "check:format": "prettier --check .",
    "build": "yarn build:codegen && yarn build:packages && yarn doc",
    "build:codegen": "npx tsx prepareVariants.ts",
    "build:packages": "yarn for-each-package build",
    "doc": "typedoc",
    "doc:serve": "cd doc && npx hads",
    "set-all-versions": "yarn workspaces foreach --all version",
    "for-each-package-cmd": "yarn workspaces foreach --from 'packages/*' -Rpt",
    "for-each-package": "yarn for-each-package-cmd run"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/emscripten": "^1.38.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^20.10.5",
    "fs-extra": "^10.0.1",
    "hads": "^3.0.3",
    "node-fetch-commonjs": "^3.1.1",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "turbo": "^1.11.2",
    "typedoc": "^0.25.4",
    "typedoc-plugin-inline-sources": "^1.0.1",
    "typedoc-plugin-markdown": "4.0.0-next.38",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "packageManager": "yarn@4.0.2",
  "stableVersion": "0.24.0"
}
