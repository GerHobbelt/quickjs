# https://gittup.org/tup/manual.html

# Host: x86_64 linux
CONFIG_LTO_HOST=y
CONFIG_CC_HOST=gcc
CONFIG_AR_HOST=gcc-ar
CONFIG_DEFINES_HOST=-D_GNU_SOURCE -D__linux__
CONFIG_LDFLAGS_HOST=-rdynamic
CONFIG_LIBS_HOST=-ldl -lpthread

# Target: x86_64 windows
CONFIG_LTO_TARGET=y
CONFIG_CC_TARGET=x86_64-w64-mingw32-gcc
CONFIG_AR_TARGET=x86_64-w64-mingw32-gcc-ar
# __USE_MINGW_ANSI_STDIO for standard snprintf behavior
CONFIG_DEFINES_TARGET=-D_GNU_SOURCE -D__USE_MINGW_ANSI_STDIO -D_WIN32
CONFIG_LIBS_TARGET=-lpthread
# statically-linked so that it doesn't depend on libwinpthread-1.dll
CONFIG_CFLAGS_TARGET=-static
